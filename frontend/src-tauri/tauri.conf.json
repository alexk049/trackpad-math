{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Trackpad Math",
  "version": "0.1.0",
  "identifier": "io.github.alexk049.trackpad-math",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Trackpad Math",
        "label": "main",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "externalBin": [
      "binaries/trackpad-math-backend"
    ],
    "active": true,
    "targets": "all",
    "linux": {
      "rpm": {
        "compression": {
          "type": "none"
        }
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "YOUR_PUBLIC_KEY_HERE",
      "endpoints": [
        "https://github.com/alexk049/trackpad-math/releases/latest/download/latest.json"
      ]
    }
  }
}