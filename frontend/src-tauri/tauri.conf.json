{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "trackpad-chars",
  "version": "0.1.0",
  "identifier": "com.trackpad-chars.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Trackpad Chars",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "externalBin": [
      "binaries/trackpad-chars-backend"
    ],
    "active": true,
    "targets": "all",
    "linux": {
      "rpm": {
        "compression": {
          "type": "none"
        }
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}